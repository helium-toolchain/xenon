<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Xenon.Launcher.Xenon"
        Title="Xenon Launcher" MinHeight="450" MinWidth="900" Height="450" Width="900" MaxHeight="450" MaxWidth="900">
	<Canvas Background="Gray">
			<StackPanel x:Name="LoginPanel" Canvas.Top="180" Canvas.Left="350">
				<TextBox x:Name="Username" Width="200" Watermark="Enter your username" Text="{Binding Username}"/>
				<TextBox x:Name="Password" Width="200" PasswordChar="*" Watermark="Enter your password" Text="{Binding Password}"/>
				<Button x:Name="Login" Content="Login" Width="100" Click="Login_OnClick"/>
			</StackPanel>
		<Button x:Name="Play" Content="Play" Width="100" Click="Play_OnClick" Canvas.Bottom="10" Canvas.Left="400"/>
	</Canvas>
</Window>
