<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Xenon.Launcher.Xenon"
        Title="Xenon Launcher" MinHeight="450" MinWidth="900" Height="450" Width="900" MaxHeight="450" MaxWidth="900">
	<Canvas Background="Gray">
		<StackPanel x:Name="LoginPanel" Canvas.Top="180" Canvas.Left="350">
			<TextBox x:Name="Username" Width="200" Watermark="username" Text="{Binding Username}" IsVisible="False"/>
			<TextBox x:Name="Password" Width="200" PasswordChar="*" Watermark="password" Text="{Binding Password}" IsVisible="False"/>
			<Button x:Name="MicrosoftBtn" Width="200" Content="Miscrosoft Account" Height="30" HorizontalContentAlignment="Center" Click="MicrosoftButton"/>
			<Button x:Name="MojangBtn" Width="200" Content="Mojang Account" Height="30" HorizontalContentAlignment="Center" Click="MojangButton"/>
			<Button x:Name="LoginBtn" Width="200" Content="Login" Height="30" HorizontalContentAlignment="Center" Click="LoginButton" IsVisible="False"/>
			<Button x:Name="BackBtn" IsVisible="False" Width="100" Content="Back" Height="30" HorizontalContentAlignment="Center" Click="BackButton"/>
		</StackPanel>
	</Canvas>
</Window>